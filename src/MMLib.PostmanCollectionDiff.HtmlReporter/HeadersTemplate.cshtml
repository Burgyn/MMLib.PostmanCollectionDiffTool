@using MMLib.PostmanCollectionDiff.HtmlReporter
@model MMLib.PostmanCollectionDiff.HtmlReporter.HeadersInfo;

<table class="table">
    <thead>
        <tr>
            <th scope="col">Header</th>
            <th scope="col">Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var header in Model.Headers)
        {
            var h = header.GetHeader(Model.Type);
            var color = RazorHelper.ChangeTypeToTextCssClass(header.ChangeType);
            <tr>
                <td class="code-text @(@color)">@h.key</td>
                <td class="code-text @(@color)">@h.value</td>
            </tr>
        }
    </tbody>
</table>
